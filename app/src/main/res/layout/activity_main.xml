<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/EditTextGiris"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:cursorVisible="true"
        android:digits="abcçdefgğhıijklmnoöprsştuüvyzABCÇDEFGĞHIİJKLMNOÖPRSŞTUÜVYZ"
        android:fontFamily="sans-serif-medium"
        android:hint="Harfleri giriniz.."
        android:inputType="text"
        android:maxLength="8"
        android:singleLine="true"
        android:textSize="17dp"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.65" />

    <ImageButton
        android:id="@+id/ButtonAra"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="@color/colorDarkRed"
        android:src="@drawable/ic_searchicon"
        app:layout_constraintBottom_toBottomOf="@+id/ButtonMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ButtonMenu"
        app:layout_constraintTop_toTopOf="@+id/ButtonMenu"
        app:layout_constraintWidth_percent="0.18" />

    <ImageButton
        android:id="@+id/ButtonSil"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="7dp"
        android:alpha="0.50"
        android:background="@null"
        android:src="@drawable/ic_deleteicon"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/EditTextGiris"
        app:layout_constraintEnd_toEndOf="@+id/EditTextGiris"
        app:layout_constraintTop_toTopOf="@+id/EditTextGiris" />

    <ImageButton
        android:id="@+id/ButtonMenu"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@null"
        android:src="@drawable/ic_arrow_drop_down_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/EditTextGiris"
        app:layout_constraintStart_toEndOf="@+id/EditTextGiris"
        app:layout_constraintTop_toTopOf="@+id/EditTextGiris"
        app:layout_constraintWidth_percent="0.16" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="7dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTextGiris"
        app:layout_constraintWidth_percent="1">

        <LinearLayout
            android:id="@+id/myLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>